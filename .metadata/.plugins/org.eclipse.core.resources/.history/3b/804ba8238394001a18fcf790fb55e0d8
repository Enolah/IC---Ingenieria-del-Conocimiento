package GUI;

import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.io.File;
import java.io.IOException;

import javax.swing.JButton;
import javax.swing.JFileChooser;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class Fichero extends JFrame{

	private static final long serialVersionUID = 1L;


	private JButton btnCargaEventos;
	
	
	public Fichero(){
		super("Elegir ficheros");
		initGUI();
	}

	private void initGUI() {
		
		JPanel mainPanel = new JPanel(new BorderLayout());
		this.setContentPane(mainPanel);
	
		this.btnCargaEventos = new JButton("Cargar");
		this.btnCargaEventos.addActionListener(new ActionListener() {
		
			@Override
			public void actionPerformed(ActionEvent e) {
				cargar();

			}
		});
		
		
		mainPanel.add(btnCargaEventos);
	}

	protected void cargar() {
		JFileChooser fc = new JFileChooser();
		int respuesta = fc.showOpenDialog(this);
		if (respuesta == JFileChooser.APPROVE_OPTION) {
			File archivoElegido = fc.getSelectedFile();
			System.out.println(archivoElegido.getName());
		}
		
	}
}
