package Decision;

import java.util.ArrayList;

public class Ejemplos {

	
	
	private  ArrayList<ArrayList<String>> ejemplo;
	
	
	public Ejemplos() {
		
		ejemplo=new ArrayList<ArrayList<String>>();
	}
	
	public void addEjemplo(String[] lista) {
		ArrayList<String> aux= new ArrayList<String>();
		for(String element: lista)
			aux.add(element);
		
		ejemplo.add(aux);
	}
	
	
	public void eliminarEjemplo(int pos){
		
		
		for(ArrayList<String> aux: ejemplo){
			aux.remove(pos);
			
		}
		
		
	}
	
	
	
	public ArrayList<ArrayList<String>> getEjemplo(){
		
		return ejemplo;
	}

	public void add(ArrayList<String> ejem) {
		// TODO Auto-generated method stub
		ejemplo.add(ejem);
		
	}
}
